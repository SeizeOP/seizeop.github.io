  <span style="color: #ffb86c;">:ensure</span>
    (<span style="color: #ffb86c;">:host</span> github <span style="color: #ffb86c;">:repo</span> <span style="color: #f1fa8c;">"org-roam/org-roam-ui"</span> <span style="color: #ffb86c;">:branch</span> <span style="color: #f1fa8c;">"main"</span> <span style="color: #ffb86c;">:files</span> (<span style="color: #f1fa8c;">"*.el"</span> <span style="color: #f1fa8c;">"out"</span>))
    <span style="color: #ffb86c;">:after</span> org-roam
